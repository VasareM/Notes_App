<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:background="@color/bckg_color">

    <TextView
        android:id="@+id/tvStorageSelection"
        android:layout_width="match_parent"
        android:background="@color/header_color"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_storage"
        android:textSize="22sp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/spStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:padding="5dp"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvStorageSelection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/note_title"
        android:textSize="22sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:background="@color/header_color"
        app:layout_constraintTop_toBottomOf="@id/spStorage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edNoteContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:hint="@string/write_a_note_here"
        android:padding="7dp"
        android:textSize="17sp"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edNoteTitle"
        />

    <Button
        android:id="@+id/btnSaveAndClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBtnSaveAndCloseClick"
        android:text="@string/save_and_close"
        android:textSize="17sp"
        android:backgroundTint="@color/darker_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edNoteContent" />
</androidx.constraintlayout.widget.ConstraintLayout>